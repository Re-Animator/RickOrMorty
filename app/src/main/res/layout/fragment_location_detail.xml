<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.location.detail.LocationDetailFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp"
        app:strokeColor="@color/cardview_light_background"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textSize="28sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="someName" />

            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toTopOf="@id/type"
                app:layout_constraintStart_toStartOf="@id/type"
                app:layout_constraintEnd_toEndOf="@id/type"
                app:layout_constraintTop_toBottomOf="@id/name" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/location_type_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_type"
                app:layout_constraintEnd_toStartOf="@id/dimension"
                tools:text="Planet" />

            <TextView
                android:id="@+id/text_dimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dimension"
                android:layout_marginStart="20dp"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toTopOf="@id/dimension"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintEnd_toEndOf="@id/dimension"
                app:layout_constraintStart_toStartOf="@id/dimension"/>

            <TextView
                android:id="@+id/dimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/text_dimension"
                app:layout_constraintStart_toEndOf="@id/type"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Dimension C-137"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/list_item"
        layout="@layout/fragment_list"/>
</LinearLayout>